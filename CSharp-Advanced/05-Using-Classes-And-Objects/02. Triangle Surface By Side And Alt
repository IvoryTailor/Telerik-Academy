namespace 02.Triangle_Surface_By_Side_And_Alt
{
    using System;

    class Program
    {
        static void Main()
        {
            double side = double.Parse(Console.ReadLine());
            double alt = double.Parse(Console.ReadLine());
            Surface(side, alt);
        }

        static void Surface(double s, double a)
        {
            Console.WriteLine("{0:F2}",(a*s)/2);
        }

    }
}
